{
    "manifest_version": 2,

    "name": "动弹一下",
    "description": "开源中国的动弹啦~",
    "version": "0.1",

    "homepage_url": "http://git.oschina.net/drayc/oschina_tweet",

    "permissions": [
        "storage",
        "*://*.oschina.net/"
    ],
    "icons": {
        "16": "img/icon_128.png",
        "128": "img/icon_128.png"
    },
    "browser_action": {
        "default_icon": "img/icon_128.png",
        "default_popup": "view/popup.html"
    },
    
    "web_accessible_resources": [
        "view/popup.html"
    ]
}